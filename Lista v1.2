public class Nodo {
    public String cont;//datos que contiene el nodo 
    public Nodo sig; 
   
    public Nodo(String c, Nodo s){// se asigna lo que contendran los nodos 
        cont=c;
        sig=s;
    } 
}

public class Lista {
    public Nodo inicio,fin; 
    public Lista(){
        inicio=null;// los dos componenetes del nodo se declaran como nulos ya que apenas se les dara valor 
        fin=null;
    }
    public void agregarnodo(String nom){// manda a llamar la funcion agregar
        inicio=new Nodo(nom, inicio);// crea el nodo con el nombre dado por teclado 
        if(fin==null){
            fin=inicio; // establece las posisciones nuevamente del nodo 
        }
    }
    public void mostrar(){ // manda a llamar la funcion mostrar 
        Nodo avanzar=inicio; // define la variable avanzar en el inicio para ir avanzando a  las demas  
        System.out.println();
        if (avanzar!=null){ //si la variable avanzar es diferente de null va mostrando los nodos
        while (avanzar!=null){
            System.out.print("["+avanzar.cont+"]");
            avanzar=avanzar.sig;       
        }
        }
        else{
            System.out.println("Lista de nodos vacia "); // si la variable avanzar el igual a nula  la lista esta vacia  
        }
    }
    public void eliminarnodo(){ //manda a llamar la funcion eliminar
        String el= inicio.cont; 
        if(inicio==fin){// si el inicio y el fin del nodo son iguales eliminara su contenido del nodo
            inicio=null;
            fin=null;   
        }
        else {
            inicio=inicio.sig;// avanza a los demas nodos 
        }
    }   
}

